                            <span>{{ product.metafields.custom.feature_three_values }}</span>
                        </div>
                    </div>
                  {% endif %}
                  {% if product.metafields.custom.feature_four_name != blank %}
                    <div class="review-div">
                        <img src="{{ product.metafields.custom.feature_four_icon | img_url : 'master' }}">
                        <div class="rev-text">
                            <h6>{{ product.metafields.custom.feature_four_name }}</h6>
                            <span>{{ product.metafields.custom.feature_four_values }}</span>
                        </div>
                    </div>
                  {% endif %}
                  {% if product.metafields.custom.feature_five_name != blank %}
                    <div class="review-div">
                        <img src="{{ product.metafields.custom.feature_five_icon | img_url : 'master' }}">
                        <div class="rev-text">
                            <h6>{{ product.metafields.custom.feature_five_name }}</h6>
                            <span>{{ product.metafields.custom.feature_five_values }}</span>
                        </div>
                    </div>
                  {% endif %}
                  {% if product.metafields.custom.feature_six_name != blank %}
                    <div class="review-div">
                        <img src="{{ product.metafields.custom.feature_six_icon | img_url : 'master' }}">
                        <div class="rev-text">
                            <h6>{{ product.metafields.custom.feature_six_name }}</h6>
                            <span>{{ product.metafields.custom.feature_six_values }}</span>
                        </div>
                    </div>
                  {% endif %}
                </div>
            </div>
            {% if product.metafields.custom.feature_row_image != blank %}
            <div class="seam-img">
                <img src="{{ product.metafields.custom.feature_row_image | img_url : 'master' }}">
            </div>
            {% endif %}
        </div>
    </div>
</section>


