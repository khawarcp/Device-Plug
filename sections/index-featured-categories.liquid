<!-- Forward -->
<section class="forward">
    <div class="container">
        <div class="forward-div">
            {% if section.settings.heading != blank %}                
                <h2> {{ section.settings.heading }} </h2>
            {% endif %}
            {% if section.settings.info != blank %}                
                <p> {{ section.settings.info }} </p>
            {% endif %}
        </div>
        <div class="forward-main">
            <div class="acces-main">
                {% for block in section.blocks %}
                    {% if forloop.first %}
                        <div class="acces-div">
                            <div class="acces-text">
                                {% if block.settings.heading != blank %}                
                                    <h4> {{ block.settings.heading }} </h4>
                                {% endif %}
                                {% if block.settings.info != blank %}                
                                    <p> {{ block.settings.info }} </p>
                                {% endif %}
                                {% render 'btn-snippet', text: block.settings.button_text, link: block.settings.button_link %}
                            </div>
                            <div class="access-img">
                                {% render 'responsive-image', image: block.settings.image, loading: 'lazy' %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
            <div class="acces-main">
                {% for block in section.blocks %}
                    {% if forloop.first %}
                        {% continue %}
                    {% else %}
                        <div class="acces-div">
                            <div class="acces-text">
                                {% if block.settings.heading != blank %}                
                                    <h4> {{ block.settings.heading }} </h4>
                                {% endif %}
                                {% if block.settings.info != blank %}                
                                    <p> {{ block.settings.info }} </p>
                                {% endif %}
                                {% render 'btn-snippet', text: block.settings.button_text, link: block.settings.button_link %}
                            </div>
                            <div class="acces-img">
                                {% render 'responsive-image', image: block.settings.image, loading: 'lazy' %}
                            </div>
                        </div>
                    {% endif %}
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
{
    "name": "Featured Categories",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Leading the Way<span>Forward</span>"
        },
        {
            "type": "inline_richtext",
            "id": "info",
            "label": "Text",
            "default": "The most complete gadget marketplace in the nation All Tech devices are available."
        }
    ],
        "blocks": [
        {
            "type": "Feature",
            "name": "feature",
            "limit": 3,
            "settings": [
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default": "iPhones"
                },
                {
                    "type": "inline_richtext",
                    "id": "info",
                    "label": "Text",
                    "default": "All models of iphone are available"
                },
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "button_text",
                    "label": "Button Text",
                    "default": "Buy Now"
                },
                {
                    "type": "url",
                    "id": "button_link",
                    "label": "Button Link"
                }
            ]
        }
    ],
    "presets": [
        {
            "name": "Featured Categories"
        }        
    ]
}
{% endschema %} 