<section class="seam-less">
    <div class="container">
        <div class="seamles-main" style="background-image: url({{ section.settings.background_image | image_url }});">
            <div class="gadgets-text">
                {% if section.settings.heading != blank %}                
                    <h2> {{ section.settings.heading }} </h2>
                {% endif %}
                {% if section.settings.info != blank %}                
                    <p> {{ section.settings.info }} </p>
                {% endif %}
                {% render 'btn-snippet', text: section.settings.button_text, link: section.settings.button_link %}
            </div>
            <div class="seam-img">
                {% render 'responsive-image', image: section.settings.image, loading: 'lazy' %}
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Hero Image",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Seamless Trade, Infinite Possibilities"
            },
            {
                "type": "inline_richtext",
                "id": "info",
                "label": "Text",
                "default": "The most complete gadget marketplace in the nation All Tech devices are available."
            },
            {
                "type": "image_picker",
                "id": "image",
                "label": "Image"
            },
            {
                "type": "image_picker",
                "id": "background_image",
                "label": "Background Image"
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button Text",
                "default": "Shop Now"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button Link"
            }
        ],
        "presets": [
            {
                "name": "Hero Image"
            }        
        ]
    }
{% endschema %}