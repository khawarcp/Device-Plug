<!-- gadgets -->
<section class="gadgets" style="background-image: url({{ section.settings.background_image | image_url }});">
    <div class="container">
        <div class="gadgets-text">
            {% if section.settings.heading != blank %}                
                <h2> {{ section.settings.heading }} </h2>
            {% endif %}
            {% if section.settings.info != blank %}                
                <p> {{ section.settings.info }} </p>
            {% endif %}
            {% render 'btn-snippet', text: section.settings.button_text, link: section.settings.button_link %}
        </div>
    </div>
</section>
<section class="gadgets-reviews">
    <div class="container">
        <div class="reviews">
            {% for block in section.blocks %}
                {% if block.settings.heading != blank %}
                    <div class="review-div">
                        {% render 'responsive-image', image: block.settings.image, loading: 'lazy' %}
                        <div class="rev-text">
                            <h6> {{ block.settings.heading }} </h6>
                            <span> {{ block.settings.subheading }} </span>
                        </div>
                     </div>
                {% endif %}
            {% endfor %}
            </div>
    </div>
</section>

{% schema %}
{
    "name" : "Gadgets",
    "settings": [
        {
            "type": "text",
            "id": "heading",
            "label": "Heading",
            "default": "Best Tech <span>Gadgets</span>"
        },
        {
            "type": "inline_richtext",
            "id": "info",
            "label": "Text",
            "default": "The most complete gadget marketplace in the nation All Tech devices are available."
        },
        {
            "type": "image_picker",
            "id": "background_image",
            "label": "Background Image"
        },
        {
            "type": "text",
            "id": "button_text",
            "label": "Button Text",
            "default": "Shop Now"
        },
        {
            "type": "url",
            "id": "button_link",
            "label": "Button Link"
        }
    ],
    "blocks": [
        {
            "type": "Feature",
            "name": "feature",
            "limit": 5,
            "settings": [
                {
                    "type": "image_picker",
                    "id": "image",
                    "label": "Image"
                },
                {
                    "type": "text",
                    "id": "heading",
                    "label": "Heading",
                    "default": "Free Delivery"
                },
                {
                    "type": "text",
                    "id": "subheading",
                    "label": "Text",
                    "default": "On all orders"
                }
            ]
        }
    ],
    "presets": [
        {
            "name" : "Gadgets"
        }
    ]
}
{% endschema %}