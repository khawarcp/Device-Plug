<!-- slider -->
<section class="pro-slider">
    <div class="container">
        <div class="slider-text">
            {% if section.settings.heading != blank %}                
                <h2> {{ section.settings.heading }} </h2>
            {% endif %}
            {% render 'btn-snippet', text: section.settings.button_text, link: section.settings.button_link %}
        </div>
        <div class="slider-main">
            <div class="slide1 owl-carousel owl-theme">
                {% assign products = collections[section.settings.collection].products %}
                {% for product in products limit: section.settings.show_products %}
                    <div class="item">
                        <div class="slider-div">
                            <div class="slider-img">
                                {% render 'responsive-image', image: product.featured_image, loading: 'lazy' %}
                            </div>
                            <div class="slider-text">
                                <div class="rev-text">
                                    <a href="{{ product.url }}">  <h5>  {{ product.title }}  </h5> </a>
                                    <span> {% render 'price', product: product, price_class: '', show_compare_at_price: true %} </span>
                                    <div class="spans">
                                        <span></span>
                                        <span></span>
                                        <span></span>
                                        <span></span>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
        </div>
    </div>
</section>

{% schema %}
    {
        "name": "Featured Collection",
        "settings": [
            {
                "type": "text",
                "id": "heading",
                "label": "Heading",
                "default": "Browse Popular <span>iPhones</span>"
            },
            {
                "type": "collection",
                "id": "collection",
                "label": "Collection"
            },
            {
                "type": "range",
                "id": "show_products",
                "min": 8,
                "max": 16,
                "step": 4,
                "label": "Show Product",
                "default": 8
            },
            {
                "type": "text",
                "id": "button_text",
                "label": "Button Text",
                "default": "See All"
            },
            {
                "type": "url",
                "id": "button_link",
                "label": "Button Link"
            }
        ],
        "presets": [
            {
                "name": "Featured Collection"
            }        
        ]
    }
{% endschema %}